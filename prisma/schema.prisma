generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Aluno {
  id       Int       @id @default(autoincrement())
  nome     String
  email    String
  cpf      String
  cadeiras Cadeira[] @relation("aluno_cadeira")

  @@map("alunos")
}

model Cadeira {
  id      Int      @id @default(autoincrement())
  nome    String
  alunos  Aluno[]  @relation("aluno_cadeira")

  @@map("cadeiras")
}

