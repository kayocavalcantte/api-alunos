generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Aluno {
  id       Int       @id @default(autoincrement())
  nome     String
  email    String
  cpf      String
  cadeiras AlunoCadeira[] 

  @@map("alunos")
}

model Cadeira {
  id      Int      @id @default(autoincrement())
  nome    String
  alunos  AlunoCadeira[]  

  @@map("cadeiras")
}

model AlunoCadeira {
  aluno_id Int 
  aluno Aluno @relation(fields: [aluno_id], references: [id])
  cadeira_id Int
  cadeira Cadeira @relation(fields: [cadeira_id], references: [id])
  start_date DateTime
  end_date DateTime
  status_id Int

  @@id([aluno_id, cadeira_id])
  @@map("aluno_cadeira")
}

